{
  "name": "@flypeng/configs",
  "version": "0.0.0",
  "description": "Personal configuration package of ESLint Configs | Prettier Configs",
  "scripts": {
    "publish": "pnpm ci:publish",
    "prepare": "husky install",
    "changeset": "changeset",
    "lint:fix": "eslint --fix packages/**/*.{js,ts,vue,jsx,tsx}",
    "lint:prettier": "prettier --write packages/**/*.{js,ts,vue,jsx,tsx,scss,css}",
    "commit": "git-cz"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "Config",
    "ESLint Configs",
    "Prettier Configs"
  ],
  "homepage": "https://github.com/flingyp/configs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flingyp/configs.git"
  },
  "bugs": "https://github.com/flingyp/configs/issues",
  "author": "FlyPeng",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.4",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}